<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" />
        </Root>

        <Logger name="com.erp" level="trace" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="com.erp" level="debug" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="com.erp" level="warn" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="com.erp" level="error" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="com.erp" level="error" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
    </Loggers>
</Configuration>